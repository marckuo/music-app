<br>
<br>
<br>  

<% if @track && @track.errors.any? %>
  <div>
    <strong>Oops something went wrong, please the errors as follows:</strong>
    <ul>
      <% @track.errors.full_messages.each do |track| %>
        <li><% track %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/tracks">

  <div>
  <label>Aritst: </label>
  <input type="text" name="artist" value="<% @track && @track.artist %>">
  </div>

  <div>
  <label>Song: </label>
  <input type="text" name="song" value="<% @track && @track.song %>">
  </div>

  <div>
  <label>Author: </label>
  <input type="text" name="author" value="<% @track && @track.author %>">
  </div>
 
  <div>
  <input type="submit" value="Submit">
  </div>

</form>

<a href="/tracks">Back to tracks</a>

<script src="/js/bootstrap.min.js"></script>
</body>
</html>
